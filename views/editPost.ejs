<%- include("./includes/head") %>
<div>
  <a href="/">
    <h4 class="btn btn-home">Go Back Home</h4>
  </a>
</div>

<form action="/admin/edit-post" method="post" enctype="multipart/form-data">
  <input hidden name="_csrf" value="<%= csrfToken  %>" />
  <div class="form-box">
    <ul>
      <% if(errorMsg){%>
      <li>
        <p class="errMsg"><%=errorMsg%></p>
      </li>
      <%}%>
      <li>
        <h1 class="title home">Add a new Post Here!</h1>
      </li>
      <li>
        <input
          type="text"
          value="<%= isValidationFail ? postId:  post._id %>"
          name="postId"
          hidden
        />
      </li>
      <li>
        <label for="title">Enter Title</label>
      </li>
      <li>
        <input
          type="text"
          id="title"
          name="title"
          value="<%= isValidationFail ? oldFormData.title : post.title  %>"
          required
        />
      </li>
      <li>
        <label for="photo">Enter photo</label>
      </li>
      <li>
        <input
          type="file"
          id="photo"
          name="photo"
          <!--
          value="<%= isValidationFail ? oldFormData.photo : post.imgUrl  %>"
          --
        />
      </li>
      <li>
        <label for="description">Enter Description</label>
      </li>
      <li>
        <textarea name="description" id="description" cols="30" rows="10">
<%= isValidationFail ? oldFormData.description : post.description  %></textarea
        >
      </li>
      <li>
        <a href="#">
          <button type="submit" class="btn btn-add">Update</button>
        </a>
      </li>
    </ul>
  </div>
</form>

<%- include("./includes/foot") %>
