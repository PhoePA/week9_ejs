<%- include("./includes/head") %>

<h1 class="title home">Add a new Post Here!</h1>
<div>
  <a href="/">
    <h4 class="btn btn-home">Go Back Home</h4>
  </a>
</div>
<form action="/admin/edit-post" method="post">
  <input hidden name="_csrf" value="<%= csrfToken  %>" />
  <div class="form-box">
    <ul>
      <li>
        <input type="text" value="<%= post._id %>" name="postId" hidden />
      </li>
      <li>
        <label for="title">Enter Title</label>
      </li>
      <li>
        <input
          type="text"
          id="title"
          name="title"
          value="<%= post.title  %>"
          required
        />
      </li>
      <li>
        <label for="photo">Enter photo</label>
      </li>
      <li>
        <input
          type="text"
          id="photo"
          name="photo"
          value="<%= post.imgUrl  %>"
          required
        />
      </li>
      <li>
        <label for="description">Enter Description</label>
      </li>
      <li>
        <textarea name="description" id="description" cols="30" rows="10">
<%= post.description  %></textarea
        >
      </li>
      <li>
        <a href="#">
          <button type="submit" class="btn btn-add">Update</button>
        </a>
      </li>
    </ul>
  </div>
</form>

<%- include("./includes/foot") %>
