<%- include("../includes/head") %>

<h1 class="title home">Register a new Account Here!</h1>
<div>
  <a href="/">
    <p class="btn btn-home">
      <i class="fa-solid fa-arrow-left icon"></i>Go Back Home
    </p>
  </a>
</div>
<form action="/register" method="post">
  <input hidden name="_csrf" value="<%= csrfToken %>" />
  <div class="form-box">
    <ul>
      <% if(errorMsg){%>
      <li>
        <p class="errMsg warn"><%=errorMsg%></p>
      </li>
      <%}%>
      <li>
        <label for="username">Enter Username</label>
      </li>
      <li>
        <input
          type="text"
          id="name"
          name="username"
          value="<%= oldFormData.username%>"
        />
      </li>
      <li>
        <label for="email">Enter a New Email</label>
      </li>
      <li>
        <input
          type="email"
          id="email"
          name="email"
          value="<%= oldFormData.email%>"
        />
      </li>
      <li>
        <label for="password">Enter a New Password</label>
      </li>
      <li>
        <input
          type="password"
          id="password"
          name="password"
          value="<%= oldFormData.password%>"
        />
      </li>
      <li class="r-btn">
        <button type="submit" class="btn btn-add">
          <i class="fa-solid fa-file-import icon"></i>Create an Account
        </button>
      </li>
    </ul>
  </div>
</form>

<%- include("../includes/foot") %>
