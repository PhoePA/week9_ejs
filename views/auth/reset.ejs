<%- include("../includes/head") %>

<h1 class="title home">Reset Password</h1>
<div>
  <a href="/login">
    <p class="btn btn-home">
      <i class="fa-solid fa-arrow-left icon"></i>Back to Login Page
    </p>
  </a>
</div>
<form action="/reset" method="post" novalidate>
  <input hidden name="_csrf" value="<%= csrfToken %>" />
  <div class="form-box">
    <ul>
      <% if(errorMsg){%>
      <li>
        <p class="errMsg"><%=errorMsg%></p>
      </li>
      <%}%>
      <li>
        <label for="email">Enter Email</label>
      </li>
      <li>
        <input type="email" id="email" name="email" />
      </li>
      <li>
        <button class="btn">
          <i class="fa-solid fa-unlock icon"></i>Reset Password
        </button>
      </li>
    </ul>
  </div>
</form>

<%- include("../includes/foot") %>
